#!/bin/bash

### BEGIN INIT INFO
# Provides:        monitor
# Required-Start:  $network $remote_fs
# Required-Stop:   $network $remote_fs
# Default-Start:   2 3 4 5
# Default-Stop:
# Short-Description: Run the monitor server
### END INIT INFO

case $1 in
    start)
        supervise {{ monitor }}/monitor_node &
        ;;
    *)
        echo "Usage: $0 start"
        exit 1
        ;;
esac
